import javax.swing.*;
import java.awt.event.*;
import java.awt.*;

public class TTT_withAI {
      
	 JFrame frame;
	 Label front_Title,user_tf,owners,turns,score_X,score_Y,user_box;
	 Panel Front_page,Board_Holders,Score_Board,Decision_Board;
	 TextField username;
	 ImageIcon wallpaper;
